@page
@using NodaTime.Extensions
@model GE.BandSite.Server.Pages.Admin.ContactSubmissions.IndexModel
@{
    Layout = "../_Layout";
    ViewData["Title"] = "Booking Requests";
}

<section class="admin-contact">
    <h1>Booking Requests</h1>
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="admin-contact__status">@Model.StatusMessage</div>
    }

    @if (Model.Submissions.Count == 0)
    {
        <p>No submissions yet.</p>
    }
    else
    {
        <table class="admin-contact__table">
            <thead>
                <tr>
                    <th>Submitted</th>
                    <th>Client</th>
                    <th>Event</th>
                    <th>Schedule</th>
                    <th>Budget</th>
                    <th>Message</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var submission in Model.Submissions)
            {
                <tr>
                    <td>@submission.CreatedAt.ToDateTimeUtc().ToLocalTime().ToString("g")</td>
                    <td>
                        <div>@submission.OrganizerName</div>
                        <div><a href="mailto:@submission.OrganizerEmail">@submission.OrganizerEmail</a></div>
                        @if (!string.IsNullOrWhiteSpace(submission.OrganizerPhone))
                        {
                            <div><a href="tel:@submission.OrganizerPhone">@submission.OrganizerPhone</a></div>
                        }
                    </td>
                    <td>
                        <div>@submission.EventType</div>
                        <div>@submission.PreferredBandSize</div>
                    </td>
                    <td>
                        @if (submission.EventDate is not null)
                        {
                            <div>@submission.EventDate?.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)</div>
                        }
                        else
                        {
                            <div>TBA</div>
                        }
                        @if (!string.IsNullOrWhiteSpace(submission.EventTimezone))
                        {
                            <div class="admin-contact__timezone">@submission.EventTimezone</div>
                        }
                    </td>
                    <td>
                        <div>@submission.BudgetRange</div>
                        @if (!string.IsNullOrWhiteSpace(submission.Location))
                        {
                            <div>@submission.Location</div>
                        }
                    </td>
                    <td class="admin-contact__message">@submission.Message</td>
                    <td>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" name="submissionId" value="@submission.SubmissionId" />
                            <button type="submit" class="admin-contact__delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</section>
