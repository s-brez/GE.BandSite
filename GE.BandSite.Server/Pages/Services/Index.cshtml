@page
@model GE.BandSite.Server.Pages.Services.IndexModel
@{
    ViewData["Title"] = "Services";
}

<div class="page">
    <section class="page__section services-hero" style="padding-top: 40px">
        <div class="services-hero__copy">
            <p class="page-eyebrow"></p>
            <h4 class="page-title">Services</h4>
            <p class="page-lead">@Model.HeroLead</p>
        </div>
    </section>

    <section class="page__section services-grid">
        <div class="services-grid__packages">
            @foreach (var package in Model.ServicePackages)
            {
                <article class="service-card">
                    <header class="service-card__header">
                        <h3 class="service-card__name">@package.Name</h3>
                        <p class="service-card__summary">@package.Summary</p>
                    </header>
                    <ul class="service-card__highlights">
                        @foreach (var highlight in package.Highlights)
                        {
                            <li>@highlight</li>
                        }
                    </ul>
                </article>
            }
        </div>
    </section>

    <section class="page__section services-lineups">
        <div class="section-heading">
            <h2 class="section-heading__title">Flexible lineup packages</h2>
            <p class="section-heading__lead">Choose your band size – from solo to full big band</p>
        </div>
        <div class="services-lineups__grid">
            @foreach (var lineup in Model.LineupPackages)
            {
                <article class="lineup-card">
                    <h3 class="lineup-card__name">@lineup.Name</h3>
                    <p class="lineup-card__description">@lineup.Description</p>
                </article>
            }
        </div>
    </section>

    <section class="page__section services-addons">

    </section>
</div>
