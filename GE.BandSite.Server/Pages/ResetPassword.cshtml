@page
@model GE.BandSite.Server.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Choose a New Password";
}
<section class="page-section page-section--narrow">
    <h1 class="page-heading">Choose a new password</h1>

    @if (Model.Completed)
    {
        <div class="form-success" role="status">
            Your password has been updated. You can now <a asp-page="/Login">sign in</a> with your new password.
        </div>
    }
    else if (Model.InvalidLink)
    {
        <div class="form-errors" role="alert">
            <p>@Model.ErrorMessage</p>
            <p><a asp-page="/ForgotPassword">Request a new password reset link</a></p>
        </div>
    }
    else
    {
        <p class="page-intro">Create a new password that meets the security requirements.</p>

        <form method="post" asp-page="/ResetPassword" class="form form--stacked">
            <div asp-validation-summary="ModelOnly" class="form-errors"></div>

            <input asp-for="Input.Token" type="hidden" />

            <div class="form-field">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-input" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="form-error"></span>
            </div>

            <button type="submit" class="button button--primary">Update password</button>
        </form>

        <p class="form-note"><a asp-page="/Login">Back to sign in</a></p>
    }
</section>
