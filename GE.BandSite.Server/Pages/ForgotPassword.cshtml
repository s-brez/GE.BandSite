@page
@model GE.BandSite.Server.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<section class="page-section page-section--narrow">
    <h1 class="page-heading">Reset your password</h1>
    <p class="page-intro">Enter the email address associated with your admin account. If it matches our records, we'll send a reset link.</p>

    @if (Model.RequestSent)
    {
        <div class="form-success" role="status">If an account exists for that email, a reset link is on its way.</div>
    }

    <form method="post" asp-page="/ForgotPassword" class="form form--stacked">
        <div asp-validation-summary="ModelOnly" class="form-errors"></div>

        <div class="form-field">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-input" autocomplete="email" />
            <span asp-validation-for="Input.Email" class="form-error"></span>
        </div>

        <button type="submit" class="button button--primary">Send reset link</button>
    </form>

    <p class="form-note"><a asp-page="/Login">Back to sign in</a></p>
</section>
