@page
@model GE.BandSite.Server.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero hero--video">
    <div class="hero__video">
        <video class="hero__video-media" autoplay loop playsinline preload="metadata" poster="~/images/12_web.jpg">
            <source src="~/videos/STB-PromoMain-Horizontal_720p.webm" type="video/webm" media="(max-width: 900px)" />
            <source src="~/videos/STB-PromoMain-Horizontal_1280p.webm" type="video/webm" media="(min-width: 901px)" />
            <source src="~/videos/STB-PromoMain-Horizontal_1280p.mp4" type="video/mp4" media="(min-width: 901px)" />
            <source src="~/videos/STB-PromoMain-Horizontal_mp4.mp4" type="video/mp4" />
        </video>
        <div class="hero__controls" aria-label="Video controls">
            <div class="hero__control hero__control--mute" role="button" tabindex="0" aria-pressed="false" aria-label="Mute audio" data-muted="true">
                <svg class="hero__icon hero__icon--volume-on" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M5.5 9H3v6h2.5L9 18.5V5.5L5.5 9Zm9.53-3.22-1.06 1.06A4.5 4.5 0 0 1 15.5 12a4.5 4.5 0 0 1-1.53 3.16l1.06 1.06A6 6 0 0 0 17 12a6 6 0 0 0-1.97-4.22Zm2.97-2.96-1.06 1.06A7.5 7.5 0 0 1 19.5 12a7.5 7.5 0 0 1-2.56 5.5l1.06 1.06A9 9 0 0 0 21 12a9 9 0 0 0-3-6.18Z" />
                </svg>
                <svg class="hero__icon hero__icon--volume-off" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M5.5 9H3v6h2.5L9 18.5V5.5L5.5 9Zm13.07-3.43-1.06 1.06L20.12 9.3l-1.41 1.41-2.12-2.12-1.41 1.41 2.12 2.12-2.12 2.12 1.41 1.41 2.12-2.12 2.12 2.12 1.41-1.41-2.12-2.12 2.12-2.12Z" />
                </svg>
            </div>
            <div class="hero__control hero__control--play" role="button" tabindex="0" aria-pressed="false" aria-label="Pause video" data-playing="true">
                <svg class="hero__icon hero__icon--pause" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8 5h3v14H8V5Zm5 0h3v14h-3V5Z" />
                </svg>
                <svg class="hero__icon hero__icon--play" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M7 5v14l12-7-12-7Z" />
                </svg>
            </div>
        </div>
    </div>
    <div class="hero__overlay">
        <p class="hero__eyebrow"></p>
        <h1 class="hero__title">@Model.HeroTitle</h1>
        <p class="hero__lead">@Model.HeroLeadCopy</p>
        <div class="hero__actions">
            <a class="button button--primary" href="/Contact">@Model.CallToActionText</a>
        </div>
    </div>
</section>

<section class="value-snapshots">
    <div class="section-heading">
        <h2 class="section-heading__title">Where swing meets every celebration</h2>
    </div>
    <div class="value-snapshots__grid">
        @foreach (var highlight in Model.ValueHighlights)
        {
            <article class="value-card">
                <h3 class="value-card__title">@highlight.Title</h3>
                <p class="value-card__copy">@highlight.Description</p>
            </article>
        }
    </div>
</section>

<section class="highlight-video" aria-label="@Model.HighlightVideoTitle">
    <div class="highlight-video__media">
        <div class="highlight-video__frame" data-playing="false">
            <button type="button" class="highlight-video__play-overlay" aria-label="Play highlight video">
                <svg class="highlight-video__play-overlay-icon" viewBox="0 0 64 64" aria-hidden="true" focusable="false">
                    <path d="M24 18v28l24-14-24-14Z" />
                    <path d="M32 60C17.664 60 6 48.336 6 34S17.664 8 32 8s26 11.664 26 26-11.664 26-26 26Zm0-48C19.215 12 10 21.215 10 34s9.215 22 22 22 22-9.215 22-22S44.785 12 32 12Z" />
                </svg>
            </button>
            <video class="highlight-video__player" controls loop preload="metadata" poster="@(Model.HighlightVideo?.PosterUrl ?? Url.Content("~/images/highlight-video-placeholder.jpg"))">
                <source src="@Model.HighlightVideo?.Url" type="@Model.HighlightVideoMimeType" />
                Your browser does not support the video tag.
            </video>
        </div>
        @if (Model.HighlightPhotos.Count > 0)
        {
            <div class="highlight-video__gallery">
                @foreach (var photo in Model.HighlightPhotos)
                {
                    <figure class="highlight-photo">
                        <img src="@photo.Url" alt="@photo.Title" />
                        <figcaption>@photo.Title</figcaption>
                    </figure>
                }
            </div>
        }
    </div>
</section>

<section class="cta-banner">
    <div class="cta-banner__inner">
        <h2 class="cta-banner__title">Ready to make the night swing?</h2>
        <p class="cta-banner__copy"></p>
        <a class="button button--primary" href="/Contact">@Model.CallToActionText</a>
    </div>
</section>
